#FROM golang:1.24-alpine AS builder
FROM crazymax/goxx AS builder

WORKDIR /app

COPY go.mod .

RUN git clone https://github.com/ashupednekar/compose ../temp-compose
RUN go mod download

COPY . .

#RUN CGO_ENABLED=1 GOOS=linux go build -a -installsuffix cgo -o main ./cmd
RUN go build -o main ./cmd

FROM debian:bookworm-slim

WORKDIR /app

COPY --from=builder /app/main server

RUN mkdir -p /data

EXPOSE 8000

ENV GIN_MODE=release

CMD ["/app/server", "listen"]
